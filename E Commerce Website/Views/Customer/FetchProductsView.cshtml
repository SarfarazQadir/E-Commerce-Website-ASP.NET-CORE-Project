@model List<Product>
    @foreach (var item in Model)
      {
        <div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item women">
            <div class="block2">
                <div class="block2-pic hov-img0">
                    <a href="@Url.Action("ProductDetails", "customer", new { id = item.product_id })">
                        <img src="@("~/ProductImages/" + item.product_image)" style="height:250px" asp-append-version="true" alt="IMG-PRODUCT">
                    </a>
                    <form action="@Url.Action("AddToCart", "customer")" method="post">
                        <input type="hidden" name="product_id" value="@item.product_id" />
                        <input type="submit" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04" value="Add To Cart" />
                    </form>
                </div>

                <div class="block2-txt flex-w flex-t p-t-14">
                    <div class="block2-txt-child1 flex-col-l ">
                        <a href="@Url.Action("ProductDetails", "customer", new { id = item.product_id })" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                            @item.product_name
                        </a>

                        <span class="stext-105 cl3">
                            Rs.@item.product_price
                        </span>
                    </div>

                    <div class="block2-txt-child2 flex-r p-t-3">
                        <a href="#" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
                            <img class="icon-heart1 dis-block trans-04" style="hieght" src="~/website/images/icons/icon-heart-01.png" alt="ICON">
                            <img class="icon-heart2 dis-block trans-04 ab-t-l" src="~/website/images/icons/icon-heart-02.png" alt="ICON">
                        </a>
                    </div>
                </div>
            </div>
        </div>
      }



