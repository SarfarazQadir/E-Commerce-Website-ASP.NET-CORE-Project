
@{
    ViewData["Title"] = "UpdateCart";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}


@model Cart
<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-6 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Update Cart Status</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <div class="form-group row">
                                <label for="inputEmail3" class="col-sm-3 col-form-label">Cart Status</label>
                                <div class="col-sm-9">
                                    <input type="hidden" value="@Model.cart_id" name="cart_id" class="form-control" id="inputEmail3">
                                    <input type="hidden" value="@Model.product_id" name="product_id" class="form-control" id="inputEmail3">
                                    <input type="hidden" value="@Model.customer_id" name="customer_id" class="form-control" id="inputEmail3">
                                    <input type="hidden" value="@Model.product_quantity" name="product_quantity" class="form-control" id="inputEmail3">
                                    <select class="form-control" name="cart_status">
                                        <option class="form-control" value="0">Pending</option>
                                        <option class="form-control" value="1">Order</option>
                                    </select>
                                </div>
                            </div>
                            <div class="card-footer center">
                                <input type="submit" value="Update Cart Status" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>