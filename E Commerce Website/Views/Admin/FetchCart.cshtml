
@{
    ViewData["Title"] = "FetchCart";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

@{
    ViewData["Title"] = "FetchFeedback";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

@model List<Cart>

<section class="section">
    <div class="section-body">
        <div class="row mt-sm-4">
            <div class="col-12 ">
                <div class="card">
                    <div class="card-header">
                        <h4>All Carts</h4>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-striped table-md">
                                <tr>
                                    <th>Product Name</th>
                                    <th>Customer Name</th>
                                    <th>Product Quantity</th>
                                    <th>Cart Status</th>
                                    <th colspan="2">Action</th>
                                </tr>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.products.product_name</td>
                                        <td>@item.customers.customer_name</td>
                                        <td>@item.product_quantity</td>
                                        <td>@item.cart_status</td>
                                        <td>
                                            <div class="dropdown">
                                                <a href="#" data-toggle="dropdown" class="btn btn-warning dropdown-toggle">Options</a>
                                                <div class="dropdown-menu">
                                                    <a href="@Url.Action("UpdateCart","admin",new{id=item.cart_id})" class="dropdown-item has-icon"><i class="far fa-edit"></i> Edit</a>
                                                    <a href="@Url.Action("DeleteCart","admin",new{id=item.cart_id})" class="dropdown-item has-icon text-danger">
                                                        <i class="far fa-trash-alt"></i>
                                                        Delete
                                                    </a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


