@model List<Category>

<section class="section">
    <div class="section-body">
        <div class="align-right">
            <a href="@Url.Action("AddCategory","admin")" class="btn btn-primary align-right">Add New Category</a>
        </div>
        <div class="row mt-sm-4">
            <div class="col-12 ">
                <div class="card">
                    <div class="card-header">
                        <h4>Category Details</h4>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-striped table-md">
                                <tr>
                                    <th>Category Id</th>
                                    <th>Category Name</th>
                                    <th colspan="2">Action</th>
                                </tr>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.category_id</td>
                                        <td>@item.category_name</td>
                                        <td>
                                            <div class="dropdown">
                                                <a href="#" data-toggle="dropdown" class="btn btn-warning dropdown-toggle">Options</a>
                                                <div class="dropdown-menu">
                                                    <a href="@Url.Action("UpdateCategory","admin",new{id=item.category_id})" class="dropdown-item has-icon"><i class="far fa-edit"></i> Edit</a>
                                                    <a href="@Url.Action("DeleteCategory","admin",new{id=item.category_id})" class="dropdown-item has-icon text-danger">
                                                        <i class="far fa-trash-alt"></i>
                                                        Delete
                                                    </a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                    }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>