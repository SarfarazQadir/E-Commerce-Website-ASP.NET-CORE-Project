@model List<Product>

<section class="section">
    <div class="section-body">
        <div class="align-right">
            <a href="@Url.Action("AddProduct","admin")" class="btn btn-primary align-right">Add New Product</a>
        </div>
        <div class="row mt-sm-4">
            <div class="col-12 ">
                <div class="card">
                    <div class="card-header">
                        <h4>Product Details</h4>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-striped table-md">
                                <tr>
                                    <th>Product Id</th>
                                    <th>Product Name</th>
                                    <th>Product Image</th>
                                    <th>Product Description</th>
                                    <th colspan="2">Action</th>
                                </tr>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.product_id</td>
                                        <td>@item.product_name</td>
                                        <td><img src="@("~/ProductImages/"+item.product_image)" asp-append-version="true" width="70px" height="70px" /></td>
                                        <td>@item.product_description</td>
                                        <td>
                                            <div class="dropdown">
                                                <a href="#" data-toggle="dropdown" class="btn btn-warning dropdown-toggle">Options</a>
                                                <div class="dropdown-menu">
                                                    <a href="@Url.Action("DetailProduct","admin",new{id=item.product_id})" class="dropdown-item has-icon"><i class="fas fa-eye"></i> View Details</a>
                                                    <a href="@Url.Action("UpdateProduct","admin",new{id=item.product_id})" class="dropdown-item has-icon"><i class="far fa-edit"></i> Edit</a>
                                                    <a href="@Url.Action("DeleteProduct","admin",new{id=item.product_id})" class="dropdown-item has-icon text-danger">
                                                        <i class="far fa-trash-alt"></i>
                                                        Delete
                                                    </a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>